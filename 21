programa
{
    const inteiro TAMANHO = 5 

    funcao inicio()
    {
        cadeia nomes[TAMANHO] 
        cadeia nomeMaisLongo = ""
        inteiro comprimentoMaximo = -1 
        inteiro comprimentoAtual
        
        inteiro linha
        
        escreva("--- Carregamento do Vetor de Nomes ---\n")
        
        para (linha = 0; linha < TAMANHO; linha++)
        {
            escreva("\n--- Nome ", linha + 1, " de ", TAMANHO, " ---\n")
            escreva("Digite o nome: ")
            leia(nomes[linha])
            escreva("Digite o NUMERO DE CARACTERES de '", nomes[linha], "': ")
            leia(comprimentoAtual)
            se (comprimentoAtual > comprimentoMaximo)
            {
                comprimentoMaximo = comprimentoAtual
                nomeMaisLongo = nomes[linha]
            }
        }
        
        escreva("\n--- Resultado ---\n")
        escreva("O nome mais longo no vetor й: ", nomeMaisLongo, "\n")
        escreva("Com um total de ", comprimentoMaximo, " caracteres (informados pelo usuário).\n")
    }
}
